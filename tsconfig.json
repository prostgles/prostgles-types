{
  "include": ["lib/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2020",
    "lib": [
      "es2022"
    ],
    "strict": true,
    "module": "commonjs",
    "removeComments": false,
    "sourceMap": true,
    "rootDir": "./lib",
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "ignoreDeprecations": "5.0", 
    "skipDefaultLibCheck": true,
    "noUncheckedIndexedAccess": true
  },
  "exclude": [
    "node_modules"
  ],
}